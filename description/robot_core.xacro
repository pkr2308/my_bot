<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material> 

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material> 

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material> 

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material> 

    <!-- BASE LINK-->

    <link name="base_link">

    </link>

    <!-- CHASSIS LINK-->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0.05 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.0 0 0.05"></origin>
            <geometry>
                <box size="0.3 0.15 0.15">

                </box>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!-- BACK LEFT WHEEL LINK-->

    <joint name="back_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_left_wheel"/>
        <origin xyz="0 0.0875 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/> 
    </joint>   

    <link name="back_left_wheel">
        <visual>
            <origin xyz="0 0 0"></origin>
            <geometry>
                <cylinder radius="0.05" length="0.03"/>

            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!-- BACK RIGHT WHEEL LINK-->

    <joint name="back_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_right_wheel"/>
        <origin xyz="0 -0.0875 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/> 
    </joint>   

    <link name="back_right_wheel">
        <visual>
            <origin xyz="0 0 0"></origin>
            <geometry>
                <cylinder radius="0.05" length="0.03"/>

            </geometry>
            <material name="white"/>
        </visual>
    </link>

</robot>