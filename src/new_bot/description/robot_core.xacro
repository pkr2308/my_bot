<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename='inertial_macros.xacro'/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material> 

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material> 

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material> 

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material> 

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK-->
    <link name="base_link">
    </link>

    <!-- CHASSIS LINK-->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0.05 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.05 0 0.05"></origin>
            <geometry>
                <box size="0.3 0.15 0.10" />
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.05 0 0.05"></origin>
            <geometry>
                <box size="0.3 0.15 0.10" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.85" x="0.3" y="0.15" z="0.10">
            <origin xyz="0.05 0 0.075"/>
        </xacro:inertial_box>
    </link>

    <!-- BACK LEFT WHEEL LINK-->
    <joint name="back_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_left_wheel"/>
        <origin xyz="0 0.0875 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/> 
    </joint>   

    <link name="back_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.03"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.03" length="0.03" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- BACK RIGHT WHEEL LINK-->
    <joint name="back_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_right_wheel"/>
        <origin xyz="0 -0.0875 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/> 
    </joint>   

    <link name="back_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.03"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.03" length="0.03" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- FRONT LEFT WHEEL LINK -->
    <joint name="front_left_wheel_joint" type="revolute">
        <parent link="chassis"/>
        <child link="front_left_wheel"/>
        <origin xyz="0.14 0.0875 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 1 0"/>
        <limit effort="5" velocity="1" lower="-${pi/4}" upper="${pi/4}"/>
        <mimic joint="steering_joint" multiplier="1.0"/>
    </joint>

    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.03"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.03" length="0.03" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- FRONT RIGHT WHEEL LINK -->
    <joint name="front_right_wheel_joint" type="revolute">
        <parent link="chassis"/>
        <child link="front_right_wheel"/>
        <origin xyz="0.14 -0.0875 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 -1 0"/>
        <limit effort="5" velocity="1" lower="-${pi/4}" upper="${pi/4}"/>
        <mimic joint="steering_joint" multiplier="1.0"/>
    </joint>
    
    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.03"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.03" length="0.03" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- STEERING SERVO (Virtual Joint for Single Servo) -->
    <joint name="steering_joint" type="revolute">
        <parent link="chassis"/>
        <child link="steering_link"/>
        <origin xyz="0.14 0 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit effort="10" velocity="2" lower="-${pi/4}" upper="${pi/4}"/>
    </joint>
    
    <link name="steering_link">
        <visual>
            <geometry>
                <box size="0.02 0.02 0.01"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <xacro:inertial_box mass="0.01" x="0.02" y="0.02" z="0.01">
            <origin xyz="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- IMU SENSOR MOUNT -->
    <joint name="imu_joint" type="fixed">
        <parent link="chassis"/>
        <child link="imu_link"/>
        <origin xyz="0.05 0 0.11" rpy="0 0 0"/>
    </joint>
    
    <link name="imu_link">
        <visual>
            <geometry>
                <box size="0.02 0.02 0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.02 0.02 0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.01" x="0.02" y="0.02" z="0.01">
            <origin xyz="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- CAMERA MOUNT -->
    <joint name="camera_joint" type="fixed">
        <parent link="chassis"/>
        <child link="camera_link"/>
        <origin xyz="0.15 0 0.12" rpy="0 0 0"/>
    </joint>
    
    <link name="camera_link">
        <visual>
            <geometry>
                <box size="0.02 0.03 0.01"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.02 0.03 0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.005" x="0.02" y="0.03" z="0.01">
            <origin xyz="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- TF LUNA LIDAR SENSORS -->
    <!-- Front TF Luna -->
    <joint name="tf_luna_front_joint" type="fixed">
        <parent link="chassis"/>
        <child link="tf_luna_front_link"/>
        <origin xyz="0.16 0 0.08" rpy="0 0 0"/>
    </joint>
    
    <link name="tf_luna_front_link">
        <visual>
            <geometry>
                <cylinder radius="0.008" length="0.015"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.008" length="0.015"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.002" length="0.015" radius="0.008">
            <origin xyz="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Left TF Luna -->
    <joint name="tf_luna_left_joint" type="fixed">
        <parent link="chassis"/>
        <child link="tf_luna_left_link"/>
        <origin xyz="0.12 0.08 0.08" rpy="0 0 ${pi/2}"/>
    </joint>
    
    <link name="tf_luna_left_link">
        <visual>
            <geometry>
                <cylinder radius="0.008" length="0.015"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.008" length="0.015"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.002" length="0.015" radius="0.008">
            <origin xyz="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Right TF Luna -->
    <joint name="tf_luna_right_joint" type="fixed">
        <parent link="chassis"/>
        <child link="tf_luna_right_link"/>
        <origin xyz="0.12 -0.08 0.08" rpy="0 0 -${pi/2}"/>
    </joint>
    
    <link name="tf_luna_right_link">
        <visual>
            <geometry>
                <cylinder radius="0.008" length="0.015"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.008" length="0.015"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.002" length="0.015" radius="0.008">
            <origin xyz="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

</robot>
